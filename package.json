{
  "name": "golani-spt-mod-installer",
  "version": "1.0.0",
  "description": "SPT (Escape from Tarkov) 모드 간편 설치 프로그램",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder --dir",
    "dist": "electron-builder",
    "build": "electron-builder build"
  },
  "author": "GoLani",
  "license": "MIT",
  "devDependencies": {
    "electron": "^34.0.2",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.example.sptmodinstaller",
    "productName": "고라니 SPT 모드 간편 설치기",
    "copyright": "Copyright © 2025 Your Name",
    "asar": true,
    "directories": {
      "buildResources": "assets",
      "output": "build"
    },
    "files": [
      "src/**/*",
      "html/**/*",
      "styles/**/*",
      "config/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "portable",
      "icon": "assets/icons/app-icon.png",
      "publisherName": "GoLani"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icons/app-icon.png"
    },
    "linux": {
      "target": "deb",
      "icon": "assets/icons/app-icon.png"
    },
    "extraResources": [
      "7zip/**/*"
    ]
  },
  "keywords": [],
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "adm-zip": "^0.5.16"
  }
}